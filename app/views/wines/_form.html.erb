<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div><br>
  <div class="field">
    <%= f.label :purchased %><br>
    <%= f.date_select :purchased, class: 'form-control', placeholder: 'When date was it bought?' %>
  </div><br>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year, class: 'form-control', placeholder: 'What year was it bought?' %>
  </div><br>
  <div class="field">
    <%= f.label :location_made %><br>
    <%= f.text_field :location_made, class: 'form-control', placeholder: 'Where was it made?' %>
  </div><br>
  <div class="field">
    <%= f.label :points %><br>
    <%= f.number_field :points, class: 'form-control', placeholder: 'Points' %>
  </div><br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Tell us a bit about it' %>
  </div><br>
  <div class="field">
    <%= f.label :release_date %><br>
    <%= f.date_select :release_date, class: 'form-control', placeholder: 'Date released' %>
  </div><br>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, class: 'form-control', placeholder: 'How many?' %>
  </div><br>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: 'form-control', placeholder: 'Price (no decimals)' %>
  </div><br>
  <div class="field">
    <%= f.label :consumed %><br>
    <%= f.check_box :consumed, class: 'checkbox' %>
  </div><br>
  <div class="field">
    <%= f.label :type_of_wine %><br>
    <%= f.text_field :wine_type, class: 'form-control', placeholder: 'What kind of wine is it?' %>
  </div><br>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div><br>
  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
