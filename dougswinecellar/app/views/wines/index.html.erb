<h1>Listing wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Purchased</th>
      <th>Year</th>
      <th>Location made</th>
      <th>Points</th>
      <th>Description</th>
      <th>Release date</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Consumed</th>
      <th>Consumed date</th>
      <th>Type</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.purchased %></td>
        <td><%= wine.year %></td>
        <td><%= wine.location_made %></td>
        <td><%= wine.points %></td>
        <td><%= wine.description %></td>
        <td><%= wine.release_date %></td>
        <td><%= wine.quantity %></td>
        <td><%= wine.price %></td>
        <td><%= wine.consumed %></td>
        <td><%= wine.consumed_date %></td>
        <td><%= wine.type %></td>
        <td><%= wine.image %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

